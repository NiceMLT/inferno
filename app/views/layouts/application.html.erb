<!DOCTYPE html>
<html>
  <head>
    <title>Inferno</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1> Brookwood Ultimate </h1>
    <h3> Information about Brookwood High School's Ultimate Program </h3>

    <div class="">
      <ul class="">
        <li <%= add_class_if_active :home %>> <%= link_to "Home", "/#" %> </li>
        <li <%= add_class_if_active :faq %>> <%= link_to "FAQ", faq_path %> </li>
        <li <%= add_class_if_active :calendar %> > <%= link_to "Calendar", calendar_path %> </li>
        <li <%= add_class_if_active :about %> > <%= link_to "About", about_path %> </li>
        <li <%= add_class_if_active :media %> > <%= link_to "Media", media_path %> </li>
        <li <%= add_class_if_active :teams %> > <%= link_to "Teams", teams_path %> </li>
      </ul>
    </div>
    <% unless current_page?('/calendar') %>
      <iframe src="https://calendar.google.com/calendar/embed?src=96vqqmsgjibsfloauh31iesel8%40group.calendar.google.com&ctz=America/New_York" style="border: 0" width="400" height="300" frameborder="0" scrolling="no"></iframe>
    <% end %>

    <a class="twitter-timeline" href="https://twitter.com/InfernoUltimate?ref_src=twsrc%5Etfw" data-width="300"data-height="300">Tweets by InfernoUltimate</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <%= yield %>
  </body>
</html>
